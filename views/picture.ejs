	<script type="text/javascript">

		$(document).ready(function(){
			$('.img-responsive').each(function(){//遍历所有.img-responsive元素
				$(this).click(function(){//为每个Img元素添加点击事件
					var id = this.id.replace('img','');
					$('.div' + id).toggle();
				});
			});
			$('.p').each(function(){//遍历所有.p元素
				$(this).click(function(){//为每个Img元素添加点击事件
					var id = this.id.replace('p','');
					$('.div' + id).toggle();
				});
			});
			$('#isay-content').click(function(e){
				$('#isay-label').css('display','none');
				e.stopPropagation(); 
			});
			$('body').click(function(){
				$('#isay-label').css('display','block');
			});
		});

		
	</script>

